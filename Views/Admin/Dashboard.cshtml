@{
    ViewData["Title"] ="Thống kê hệ thống";
    Layout ="~/Views/Shared/_AdminLayout.cshtml";
}

<div class="top-bar">
    <h1 class="page-title">Thống kê hệ thống</h1>
    <p class="page-subtitle">Tổng quan về hoạt động của hệ thống</p>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon blue">
                <i class="bi bi-people"></i>
            </div>
            <div class="stat-info">
                <h3>@ViewBag.TotalUsers</h3>
                <p>Tổng người dùng</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon green">
                <i class="bi bi-file-text"></i>
            </div>
            <div class="stat-info">
                <h3>0</h3>
                <p>Tổng bài đăng</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon cyan">
                <i class="bi bi-box-seam"></i>
            </div>
            <div class="stat-info">
                <h3>0</h3>
                <p>Tổng sản phẩm</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon yellow">
                <i class="bi bi-star-fill"></i>
            </div>
            <div class="stat-info">
                <h3>@ViewBag.TotalReviews</h3>
                <p>Tổng đánh giá</p>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-info">
    <i class="bi bi-info-circle"></i> Dashboard đang trong quá trình phát triển. Các biểu đồ và thống kê chi tiết sẽ được thêm vào sau.
</div>