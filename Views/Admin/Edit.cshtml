        <label for="SFullName">Tên đầy đủ</label>
        <input type="text" class="form-control" id="SFullName" name="SFullName" value="@Model.SFullName" required />
    </div>

    <div class="form-group">
        <label for="SEmail">Email</label>
        <input type="email" class="form-control" id="SEmail" name="SEmail" value="@Model.SEmail" required />
    </div>

    <div class="form-group">
        <label for="SPhoneNumber">Số điện thoại</label>
        <input type="text" class="form-control" id="SPhoneNumber" name="SPhoneNumber" value="@Model.SPhoneNumber" />
    </div>

