@model IEnumerable<BTL_LTWNC.Models.TblUser>
@{
    ViewData["Title"] = "Admin Dashboard";
    var successMessage = TempData["SuccessMessage"];
    var errorMessage = TempData["ErrorMessage"];
    var role = ViewBag.Role;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />

<div class="admin-container">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <h2>Admin Panel</h2>
            <p>Quản lý hệ thống</p>
        </div>
        <nav class="sidebar-menu">
            <button class="menu-item active" onclick="showSection('dashboard')">
                <i class="bi bi-speedometer2 me-2"></i> Thống kê
            </button>
            <button class="menu-item" onclick="showSection('users')">
                <i class="bi bi-people me-2"></i> Quản lý tài khoản
            </button>
            <button class="menu-item" onclick="showSection('posts')">
                <i class="bi bi-file-text me-2"></i> Quản lý bài đăng
            </button>
            <button class="menu-item" onclick="showSection('categories')">
                <i class="bi bi-tags me-2"></i> Danh mục
            </button>
            <button class="menu-item" onclick="showSection('products')">
                <i class="bi bi-box-seam me-2"></i> Sản phẩm
            </button>
            <button class="menu-item" onclick="showSection('reviews')">
                <i class="bi bi-star-fill me-2"></i> Reviews
            </button>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Dashboard Section -->
        <div id="dashboard-section" class="section active">
            <div class="top-bar">
                <h1 class="page-title">Thống kê hệ thống</h1>
                <p class="page-subtitle">Tổng quan về hoạt động của hệ thống</p>
            </div>

            <div class="filter-section">
                <div class="filter-group">
                    <label>Loại lọc</label>
                    <select>
                        <option>Theo năm</option>
                        <option>Theo tháng</option>
                        <option>Theo tuần</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label>Năm</label>
                    <select>
                        <option>2026</option>
                        <option>2025</option>
                    </select>
                </div>
                <div>
                    <span class="clear-filter"> Xóa bỏ lọc</span>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-3">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex align-items-center">
                            <i class="bi bi-people fs-1 text-primary me-3"></i>
                            <div>
                                <h5 class="mb-0">@Model.Count()</h5>
                                <small class="text-muted">Người dùng</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex align-items-center">
                            <i class="bi bi-file-text fs-1 text-success me-3"></i>
                            <div>
                                <h5 class="mb-0">0</h5>
                                <small class="text-muted">Bài đăng</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex align-items-center">
                            <i class="bi bi-box-seam fs-1 text-info me-3"></i>
                            <div>
                                <h5 class="mb-0">0</h5>
                                <small class="text-muted">Sản phẩm</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex align-items-center">
                            <i class="bi bi-star-fill fs-1 text-warning me-3"></i>
                            <div>
                                <h5 class="mb-0">0</h5>
                                <small class="text-muted">Đánh giá</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Users Section -->
            <div id="users-section" class="section">
                <div class="top-bar">
                    <h1 class="page-title">Quản lý tài khoản</h1>
                    <p class="page-subtitle">Danh sách người dùng trong hệ thống</p>
                </div>

                @if (successMessage != null)
                {
                    <div class="alert alert-success">
                        ✓ @successMessage
                    </div>
                }

                @if (errorMessage != null)
                {
                    <div class="alert alert-danger">
                        ✕ @errorMessage
                    </div>
                }

                <div class="data-table">
                    <div class="table-header">
                        <h3>Danh sách tài khoản</h3>
                        @if (role == "Quản trị viên")
                        {
                            <button class="btn btn-success" onclick="openAddForm()">+ Thêm mới</button>
                        }
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên đầy đủ</th>
                                <th>Email</th>
                                <th>Vai trò</th>
                                @if (role == "Quản trị viên")
                                {
                                    <th>Thao tác</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="user-row-@item.IUserId">
                                    <td>@item.IUserId</td>
                                    <td>@item.SFullName</td>
                                    <td>@item.SEmail</td>
                                    <td>
                                        @if (item.SRole == "Quản trị viên")
                                        {
                                            <span class="badge badge-success">@item.SRole</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-info">@item.SRole</span>
                                        }
                                    </td>
                                    @if (role == "Quản trị viên")
                                    {
                                        <td>
                                            <button class="btn btn-warning btn-sm"
                                                onclick="openEditModal1(@item.IUserId)">Sửa</button>
                                            <button class="btn btn-danger btn-sm"
                                                onclick="confirmDelete1(@item.IUserId)">Xóa</button>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Posts Section -->
            <div id="posts-section" class="section">
                <div class="top-bar">
                    <h1 class="page-title">Quản lý bài đăng</h1>
                    <p class="page-subtitle">Danh sách bài đăng trong hệ thống</p>
                </div>
                <div class="data-table">
                    <div class="table-header">
                        <h3>Danh sách bài đăng</h3>
                        <button class="btn btn-success">+ Thêm bài viết</button>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tiêu đề</th>
                                <th>Tác giả</th>
                                <th>Danh mục</th>
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="7" style="text-align: center; padding: 40px; color: #999;">Chưa có dữ liệu
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Categories Section -->
            <div id="categories-section" class="section">
                <div class="top-bar">
                    <h1 class="page-title">Quản lý danh mục</h1>
                    <p class="page-subtitle">Danh sách danh mục trong hệ thống</p>
                </div>
                <div class="data-table">
                    <div class="table-header">
                        <h3>Danh sách danh mục</h3>
                        <button class="btn btn-success">+ Thêm danh mục</button>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên danh mục</th>
                                <th>Mô tả</th>
                                <th>Số lượng</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5" style="text-align: center; padding: 40px; color: #999;">Chưa có dữ liệu
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Products Section -->
            <div id="products-section" class="section">
                <div class="top-bar">
                    <h1 class="page-title">Quản lý sản phẩm</h1>
                    <p class="page-subtitle">Danh sách sản phẩm trong hệ thống</p>
                </div>
                <div class="data-table">
                    <div class="table-header">
                        <h3>Danh sách sản phẩm</h3>
                        <button class="btn btn-success">+ Thêm sản phẩm</button>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên sản phẩm</th>
                                <th>Giá</th>
                                <th>Danh mục</th>
                                <th>Kho</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="7" style="text-align: center; padding: 40px; color: #999;">Chưa có dữ liệu
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Reviews Section -->
            <div id="reviews-section" class="section">
                <div class="top-bar">
                    <h1 class="page-title">Quản lý đánh giá</h1>
                    <p class="page-subtitle">Danh sách đánh giá từ người dùng</p>
                </div>
                <div class="data-table">
                    <div class="table-header">
                        <h3>Danh sách đánh giá</h3>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Người đánh giá</th>
                                <th>Sản phẩm</th>
                                <th>Xếp hạng</th>
                                <th>Nội dung</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="7" style="text-align: center; padding: 40px; color: #999;">Chưa có dữ liệu
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
    </main>
</div>

<!-- Add User Modal -->
<div id="addForm" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Thêm người dùng mới</h3>
            <button class="close-btn" onclick="closeAddForm()">&times;</button>
        </div>
        <form id="addUserForm" onsubmit="event.preventDefault(); addUser();">
            <div class="form-group">
                <label for="addFullName">Tên đầy đủ *</label>
                <input type="text" class="form-control" id="addFullName" required />
            </div>
            <div class="form-group">
                <label for="addEmail">Email *</label>
                <input type="email" class="form-control" id="addEmail" required />
            </div>
            <div class="form-group">
                <label for="addPass">Mật khẩu *</label>
                <input type="password" class="form-control" id="addPass" required />
            </div>
            <div class="form-group">
                <label for="addPhone">Số điện thoại</label>
                <input type="text" class="form-control" id="addPhone" />
            </div>
            <div class="form-group">
                <label for="addRole">Vai trò *</label>
                <select class="form-control" id="addRole" required>
                    <option value="">Chọn vai trò</option>
                    <option value="Quản trị viên">Quản trị viên</option>
                    <option value="Thành viên">Thành viên</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Key">Mã xác thực</label>
                <input type="text" class="form-control" id="Key" />
            </div>
            <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="closeAddForm()">Hủy</button>
                <button type="submit" class="btn btn-primary">Thêm mới</button>
            </div>
        </form>
    </div>
</div>

<!-- Edit User Modal -->
<div id="editForm" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Sửa thông tin người dùng</h3>
            <button class="close-btn" onclick="closeEditForm()">&times;</button>
        </div>
        <form id="editUserForm" onsubmit="event.preventDefault(); updateUser();">
            <input type="hidden" id="editUserId" />
            <div class="form-group">
                <label for="editFullName">Tên đầy đủ *</label>
                <input type="text" class="form-control" id="editFullName" required />
            </div>
            <div class="form-group">
                <label for="editEmail">Email *</label>
                <input type="email" class="form-control" id="editEmail" required />
            </div>
            <div class="form-group">
                <label for="editRole">Vai trò *</label>
                <select class="form-control" id="editRole" required>
                    <option value="Quản trị viên">Quản trị viên</option>
                    <option value="Thành viên">Thành viên</option>
                </select>
            </div>
            <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="closeEditForm()">Hủy</button>
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-dashboard.js" asp-append-version="true"></script>
    <script>
        function confirmDelete1(userId) {
            if (confirm('Bạn có chắc chắn muốn xóa người dùng này?')) {
                fetch(`/Admin/DeleteUserAJAX?userId=${userId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                    .then(response => response.json())
                    .then(result => {
                        if (result.success) {
                            const row = document.getElementById(`user-row-${userId}`);
                            if (row) {
                                row.remove();
                            }
                            alert('Xóa người dùng thành công!');
                        } else {
                            alert('Không thể xóa: ' + result.message);
                        }
                    })
                    .catch(() => alert('Đã xảy ra lỗi khi xóa người dùng.'));
            }
        }

        function openEditModal1(userId) {
            fetch(`/Admin/GetUserDetails?userId=${userId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById("editUserId").value = data.user.iUserId;
                        document.getElementById("editFullName").value = data.user.sFullName;
                        document.getElementById("editEmail").value = data.user.sEmail;
                        document.getElementById("editRole").value = data.user.sRole;
                        document.getElementById('editForm').style.display = 'block';
                    } else {
                        alert('Không thể lấy thông tin người dùng.');
                    }
                })
                .catch(() => alert('Đã xảy ra lỗi khi lấy dữ liệu.'));
        }

        function updateUser() {
            const id = document.getElementById('editUserId').value;
            const fullName = document.getElementById('editFullName').value;
            const email = document.getElementById('editEmail').value;
            const role = document.getElementById('editRole').value;

            const user = {
                iUserId: id,
                SFullName: fullName,
                SEmail: email,
                SRole: role
            };

            fetch('/Admin/UpdateUser', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(user)
            })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        alert('Cập nhật thành công!');
                        closeEditForm();
                        const row = document.getElementById(`user-row-${id}`);
                        row.querySelector('td:nth-child(2)').textContent = fullName;
                        row.querySelector('td:nth-child(3)').textContent = email;
                        const badgeClass = role === 'Quản trị viên' ? 'badge-success' : 'badge-info';
                        row.querySelector('td:nth-child(4)').innerHTML = `<span class="badge ${badgeClass}">${role}</span>`;
                    } else {
                        alert('Cập nhật thất bại: ' + result.message);
                    }
                })
                .catch(() => alert('Đã xảy ra lỗi khi cập nhật.'));
        }

        function addUser() {
            const fullName = document.getElementById('addFullName').value;
            const email = document.getElementById('addEmail').value;
            const role = document.getElementById('addRole').value;
            const password = document.getElementById('addPass').value;
            const phone = document.getElementById('addPhone').value;
            const key = document.getElementById('Key').value;

            const user = {
                SFullName: fullName,
                SEmail: email,
                SRole: role,
                SPassword: password,
                SPhoneNumber: phone,
                VerifyKey: key
            };

            fetch('/Admin/AddUser', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(user)
            })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        alert('Thêm người dùng thành công!');
                        closeAddForm();

                        const tableBody = document.querySelector('#users-section table tbody');
                        const newRow = document.createElement('tr');
                        newRow.id = `user-row-${result.user.iUserId}`;

                        const badgeClass = result.user.sRole === 'Quản trị viên' ? 'badge-success' : 'badge-info';

                        newRow.innerHTML = `
                                                <td>${result.user.iUserId}</td>
                                                <td>${result.user.sFullName}</td>
                                                <td>${result.user.sEmail}</td>
                                                <td><span class="badge ${badgeClass}">${result.user.sRole}</span></td>
                                                <td>
                                                    <button class="btn btn-warning btn-sm" onclick="openEditModal1(${result.user.iUserId})">Sửa</button>
                                                    <button class="btn btn-danger btn-sm" onclick="confirmDelete1(${result.user.iUserId})">Xóa</button>
                                                </td>
                                            `;
                        tableBody.appendChild(newRow);
                    } else {
                        alert('Thêm người dùng thất bại: ' + result.message);
                    }
                })
                .catch(() => alert('Đã xảy ra lỗi khi thêm người dùng.'));
        }
    </script>
}