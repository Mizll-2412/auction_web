@{
    var userName = Context.Session.GetString("FullName");
    var userRole = Context.Session.GetString("Role");
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
</head>
<style>
    .sidebar-divider {
        border-color: rgba(255,255,255,0.1);
        margin: 15px 20px;
    }

    .menu-item.text-muted {
        color: rgba(255,255,255,0.6) !important;
    }

    .menu-item.text-danger {
        color: #ff6b6b !important;
    }

    .menu-item.text-muted:hover,
    .menu-item.text-danger:hover {
        background: rgba(255,255,255,0.1);
    }
</style>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>Admin Panel</h2>
                <p>@userRole</p>
            </div>
            <nav class="sidebar-menu">
                <a asp-controller="Admin" asp-action="Dashboard" 
                   class="menu-item @(currentAction == "Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2 me-2"></i> Thống kê
                </a>
                <a asp-controller="Admin" asp-action="Users" 
                   class="menu-item @(currentAction == "Users" || currentAction == "UserList" ? "active" : "")">
                    <i class="bi bi-people me-2"></i> Quản lý tài khoản
                </a>
                <a asp-controller="Admin" asp-action="Posts" 
                   class="menu-item @(currentAction == "Posts" ? "active" : "")">
                    <i class="bi bi-file-text me-2"></i> Quản lý bài đăng
                </a>
                <a asp-controller="Admin" asp-action="Categories" 
                   class="menu-item @(currentAction == "Categories" ? "active" : "")">
                    <i class="bi bi-tags me-2"></i> Danh mục
                </a>
                @* <a asp-controller="Admin" asp-action="Products" 
                   class="menu-item @(currentAction == "Products" ? "active" : "")">
                    <i class="bi bi-box-seam me-2"></i> Sản phẩm
                </a> *@
                <a asp-controller="Admin" asp-action="Reviews" 
                   class="menu-item @(currentAction == "Reviews" ? "active" : "")">
                    <i class="bi bi-star-fill me-2"></i> Reviews
                </a>
                <hr class="sidebar-divider">
                <a asp-controller="Home" asp-action="Index" class="menu-item text-muted">
                    <i class="bi bi-house me-2"></i> Về trang chủ
                </a>
                <a asp-controller="Account" asp-action="Logout" class="menu-item text-danger">
                    <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin-dashboard.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>