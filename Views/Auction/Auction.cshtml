@{
    ViewData["Title"] = "Chi Tiết Đấu Giá";
    var auction = ViewBag.Auction as BTL_LTWNC.Models.TblAuction;
    var isEnded = auction?.SStatus == "Đã kết thúc";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link rel="stylesheet" href=".../css/Auction/auction.css" >

<div class="container auction-container">
    <div class="row g-4">

        <div class="col-md-6">
            <div class="info-card @(isEnded ? "ended" : "")">
                @if (isEnded)
                {
                    <div class="ended-banner">
                        <i class="bi bi-check-circle-fill"></i> ĐÃ KẾT THÚC
                    </div>
                }
                @if (auction?.IProduct != null)
                {
                    <img src="@auction.IProduct.SImageUrl" class="product-image" alt="@auction.IProduct.SProductName" />
                }
                else
                {
                    <p>Không có hình ảnh sản phẩm.</p>
                }
            </div>
        </div>

        <div class="col-md-6">
            <div class="info-card @(isEnded ? "ended" : "")">
                @if (isEnded)
                {
                    <div class="ended-banner">
                        <i class="bi bi-check-circle-fill"></i> ĐÃ KẾT THÚC
                    </div>
                }

                <h3 class="mb-4 text-center fw-bold">CHI TIẾT ĐẤU GIÁ</h3>

                @if (auction != null)
                {
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><strong>Tên sản phẩm:</strong></td>
                                <td>@auction.IProduct?.SProductName</td>
                            </tr>
                            <tr>
                                <td><strong>Giá khởi điểm:</strong></td>
                                <td class="text-danger fw-bold">@string.Format("{0:N0} VND",
                                                                    auction.IProduct?.DStartingPrice)</td>
                            </tr>
                            <tr>
                                <td><strong>Bắt đầu:</strong></td>
                                <td>@auction.DtStartTime</td>
                            </tr>
                            <tr>
                                <td><strong>Kết thúc:</strong></td>
                                <td>@auction.DtEndTime</td>
                            </tr>
                            <tr>
                                <td><strong>Trạng thái:</strong></td>
                                <td>
                                    <span class="badge @(isEnded ? "bg-danger" : "bg-success")">
                                        @auction.SStatus
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    @if (isEnded && auction.IWinnerId != null)
                    {
                        <div class="winner-card text-center">
                            <div class="winner-icon">
                                <i class="bi bi-trophy-fill"></i>
                            </div>
                            <h4 class="mt-3 mb-2">NGƯỜI THẮNG CUỘC</h4>
                            <h5 class="mb-2">@auction.IWinner?.SFullName</h5>
                            <p class="mb-0 fs-5">
                                <strong>Giá thắng:</strong> 
                                @String.Format("{0:N0} VND", auction.DHighestBid ?? 0)
                            </p>
                        </div>
                    }
                    else if (isEnded && auction.IWinnerId == null)
                    {
                        <div class="alert alert-warning text-center">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Không có người thắng cuộc</strong>
                            <p class="mb-0">Phiên đấu giá kết thúc mà không có ai đặt giá.</p>
                        </div>
                    }
                    @if (!isEnded)
                    {
                        <p class="fs-5 mt-4">
                            <strong>Giá cao nhất hiện tại:</strong>
                            <span class="text-danger fw-bold" id="highestBid">
                                @String.Format("{0:N0} VND", auction.DHighestBid ?? 0)
                            </span>
                        </p>
                    }

                    <div class="countdown-box @(isEnded ? "ended" : "") my-3">
                        <span id="countdown"></span>
                    </div>

                    @if (!isEnded)
                    {
                        <div class="input-group mt-3">
                            <input type="number" class="form-control bid-input" id="bidAmount"
                                placeholder="Nhập số tiền đấu giá" min="@((auction.DHighestBid ?? 0) + 1000)">
                            <button class="btn btn-success bid-btn" id="placeBidButton">Đấu giá</button>
                        </div>
                        <p id="validation1" class="text-danger mt-2"></p>

                        <div class="mt-3">
                            <button class="btn btn-danger w-100 end-early-btn" id="endEarlyButton">
                                <i class="bi bi-stop-circle"></i> Kết Thúc Sớm
                            </button>
                            <p id="validationEndEarly" class="text-danger mt-2"></p>
                        </div>
                    }
                }
                else
                {
                    <p>Không tìm thấy thông tin đấu giá.</p>
                }
            </div>
        </div>
        <div class="col-12 mt-4">
            <div class="info-card">
                <h4 class="text-center fw-bold mb-3">LỊCH SỬ ĐẤU GIÁ</h4>
                @{
                    var bidsHistory = ViewBag.AuctionBid;
                }

                <div id="historyTableContainer">
                    @if (bidsHistory != null)
                    {
                        <table class="table table-bordered history-table">
                            <thead>
                                <tr>
                                    <th>Người đặt</th>
                                    <th>Số tiền</th>
                                    <th>Thời gian</th>
                                </tr>
                            </thead>
                            <tbody id="historyTableBody">
                                @foreach (TblBid tblBid in bidsHistory)
                                {
                                    var isWinner = isEnded && auction?.IWinnerId == tblBid.IBidderId;
                                    <tr class="@(isWinner ? "winner-row" : "")">
                                        <td>
                                            @tblBid.IBidder?.SFullName
                                            @if (isWinner)
                                            {
                                                <span class="winner-badge">
                                                    <i class="bi bi-trophy-fill"></i> THẮNG CUỘC
                                                </span>
                                            }
                                        </td>
                                        <td class="text-danger fw-bold">
                                            @String.Format("{0:N0} VND", tblBid.DBidAmount)
                                        </td>
                                        <td>@tblBid.DtBidTime</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-center text-muted">Chưa có ai đấu giá.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

<script>
    const endTime = new Date("@auction?.DtEndTime").getTime();
    const auctionId = @auction?.IAuctionId;
    const currentStatus = "@auction?.SStatus";
    console.log('Auction ID from view:', auctionId);
    console.log('Current status:', currentStatus);

    function updateCountdown() {
        const now = new Date().getTime();
        const distance = endTime - now;

        if (distance < 0 || currentStatus === "Đã kết thúc") {
            document.getElementById("countdown").innerHTML = '<i class="bi bi-x-circle-fill"></i> Đã kết thúc';
            const placeBidBtn = document.getElementById("placeBidButton");
            const endEarlyBtn = document.getElementById("endEarlyButton");
            if (placeBidBtn) placeBidBtn.disabled = true;
            if (endEarlyBtn) endEarlyBtn.disabled = true;
            return;
        }

        const h = Math.floor(distance / (1000 * 60 * 60));
        const m = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const s = Math.floor((distance % (1000 * 60)) / 1000);

        document.getElementById("countdown").innerHTML = `<i class="bi bi-clock-fill"></i> ${h} giờ ${m} phút ${s} giây`;
    }

    setInterval(updateCountdown, 1000);
    updateCountdown();

    // XỬ LÝ ĐẤU GIÁ
    const placeBidBtn = document.getElementById('placeBidButton');
    if (placeBidBtn) {
        placeBidBtn.addEventListener('click', function () {
            const bidAmount = parseFloat(document.getElementById('bidAmount').value);
            const validation = document.getElementById('validation1');

            if (!bidAmount || bidAmount <= 0) {
                validation.textContent = 'Vui lòng nhập số tiền hợp lệ.';
                return;
            }

            validation.textContent = '';
            const formData = new FormData();
            formData.append('auctionId', auctionId);
            formData.append('bidAmount', bidAmount);

            fetch('/Auction/PlaceBid', {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        validation.textContent = data.message;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    validation.textContent = 'Có lỗi xảy ra.';
                });
        });
    }

    // XỬ LÝ KẾT THÚC SỚM
    const endEarlyBtn = document.getElementById('endEarlyButton');
    if (endEarlyBtn) {
        endEarlyBtn.addEventListener('click', function () {
            const validationEndEarly = document.getElementById('validationEndEarly');
            
            if (!confirm('Bạn có chắc chắn muốn kết thúc đấu giá sớm?\n\n Hành động này sẽ:\n- Kết thúc đấu giá ngay lập tức\n- Xác định người thắng cuộc (nếu có)\n- Không thể hoàn tác!\n\nBạn có muốn tiếp tục?')) {
                return;
            }

            validationEndEarly.textContent = '';

            const formData = new FormData();
            formData.append('auctionId', auctionId);

            fetch('/Auction/EndAuctionEarly', {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Thành Công ' + data.message);
                        location.reload();
                    } else {
                        validationEndEarly.textContent = data.message;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    validationEndEarly.textContent = 'Có lỗi xảy ra khi kết thúc đấu giá.';
                });
        });
    }
</script>