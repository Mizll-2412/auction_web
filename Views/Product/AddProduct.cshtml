@model BTL_LTWNC.Models.TblProduct
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
    var categories = ViewBag.Categories as List<BTL_LTWNC.Models.TblCategory>;
    var selectedCategoryId = ViewBag.CategoryId ?? 0;
}

<link rel="stylesheet" href="~/css/Home/product-form.css" asp-append-version="true" />

<div class="form-container">
    <div class="form-header">
        <h2>Thêm sản phẩm mới</h2>
        <a href="@Url.Action("ListProduct", "Product", new { categoryId = selectedCategoryId })" class="btn-back">
            Quay lại
        </a>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-error">
            @ViewBag.ErrorMessage
        </div>
    }

    <form asp-action="AddProduct" method="post" class="product-form">
        <div class="form-group">
            <label asp-for="SProductName" class="form-label">Tên sản phẩm <span class="required">*</span></label>
            <input asp-for="SProductName" class="form-control" placeholder="Nhập tên sản phẩm" required />
            <span asp-validation-for="SProductName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SDescription" class="form-label">Mô tả <span class="required">*</span></label>
            <textarea asp-for="SDescription" class="form-control" rows="4" placeholder="Nhập mô tả sản phẩm" required></textarea>
            <span asp-validation-for="SDescription" class="text-danger"></span>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="DStartingPrice" class="form-label">Giá khởi điểm <span class="required">*</span></label>
                <input asp-for="DStartingPrice" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                <span asp-validation-for="DStartingPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ICategoryId" class="form-label">Danh mục <span class="required">*</span></label>
                <select asp-for="ICategoryId" class="form-control" required>
                    <option value="">-- Chọn danh mục --</option>
                    @if (categories != null)
                    {
                        foreach (var category in categories)
                        {
                            <option value="@category.ICategoryId" selected="@(category.ICategoryId == selectedCategoryId)">
                                @category.SCategoryName
                            </option>
                        }
                    }
                </select>
                <span asp-validation-for="ICategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="SImageUrl" class="form-label">URL hình ảnh <span class="required">*</span></label>
            <input asp-for="SImageUrl" class="form-control" placeholder="https://example.com/image.jpg" required />
            <span asp-validation-for="SImageUrl" class="text-danger"></span>
            <div class="image-preview" id="imagePreview" style="display: none;">
                <img id="previewImg" src="" alt="Preview" />
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <span>✓</span> Thêm sản phẩm
            </button>
            <a href="@Url.Action("ListProduct", "Product", new { categoryId = selectedCategoryId })" class="btn btn-secondary">
                Hủy
            </a>
        </div>
    </form>
</div>

<script>
    document.querySelector('input[name="SImageUrl"]').addEventListener('input', function(e) {
        const url = e.target.value;
        const preview = document.getElementById('imagePreview');
        const img = document.getElementById('previewImg');
        
        if (url) {
            img.src = url;
            preview.style.display = 'block';
            
            img.onerror = function() {
                preview.style.display = 'none';
            };
        } else {
            preview.style.display = 'none';
        }
    });
</script>

