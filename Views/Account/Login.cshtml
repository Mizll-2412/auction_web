@{
    ViewData["Title"] = "ﾄ斉ハg nh蘯ｭp";
    Layout = "~/Views/Shared/_LayoutNoHeader.cshtml";
}
@model BTL_LTWNC.Models.TblUser

<link rel="stylesheet" href="~/css/Account/Dangky.css" asp-append-version="true" />

<div class="login-wrapper">
    <form id="form1" asp-action="Login" method="post" class="login-card">

        <h2 class="title">ﾄ斉ハg nh蘯ｭp</h2>

        <div class="form-group">
            <label for="email">Email</label>
            <input asp-for="SEmail" type="text" id="email" name="email" placeholder="Nh蘯ｭp email..." />
        </div>

        <div class="form-group">
            <label asp-for="SPassword">M蘯ｭt kh蘯ｩu</label>
            <div class="password-box">
                <input asp-for="SPassword" type="password" id="password" name="password" placeholder="Nh蘯ｭp m蘯ｭt kh蘯ｩu...">
                <span id="togglePassword" class="toggle-icon">汨</span>
            </div>
        </div>

        <button type="submit" class="btn-login">ﾄ斉ハg nh蘯ｭp</button>

        <p class="register-link">
            Chﾆｰa cﾃｳ tﾃi kho蘯｣n?
            <a asp-action="Register">ﾄ斉ハg kﾃｽ</a>
        </p>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="validation-box">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    </form>
</div>

<script>
    const togglePassword = document.getElementById("togglePassword");
    const passwordField = document.getElementById("password");

    togglePassword.addEventListener("click", () => {
        const type = passwordField.type === "password" ? "text" : "password";
        passwordField.type = type;
    });
</script>
